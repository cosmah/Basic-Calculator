<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/screen"
        android:paddingTop="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/txtEntry"
            android:hint="Enter Expression"
            android:textStyle="bold"
            android:textSize="40dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/txtView"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_below="@+id/txtEntry"/>
    </RelativeLayout>

        <!-- Nested ConstraintLayout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/constraintLayout">

            <!-- Five RelativeLayouts inside the ConstraintLayout -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/relativeLayout1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/relativeLayout2"
                app:layout_constraintBottom_toTopOf="@id/relativeLayout3">

                <!-- Content for RelativeLayout1 -->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/relativeLayout2"
                app:layout_constraintStart_toEndOf="@id/relativeLayout1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/relativeLayout3"
                app:layout_constraintBottom_toTopOf="@id/relativeLayout4">

                <!-- Content for RelativeLayout2 -->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/relativeLayout3"
                app:layout_constraintStart_toEndOf="@id/relativeLayout2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/relativeLayout4"
                app:layout_constraintBottom_toTopOf="@id/relativeLayout5">

                <!-- Content for RelativeLayout3 -->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/relativeLayout4"
                app:layout_constraintStart_toEndOf="@id/relativeLayout3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/relativeLayout5">

                <Button
                    android:id="@+id/btnone"
                    android:layout_width="90dp"
                    android:layout_height="80dp"

                    android:layout_marginLeft="10dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/btntwo"
                    android:layout_width="90dp"
                    android:layout_height="80dp"

                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/btnone"
                    android:text="2"
                    android:textAlignment="center"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/btnthree"
                    android:layout_width="90dp"
                    android:layout_height="80dp"

                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/btntwo"
                    android:text="3"
                    android:textAlignment="center"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/btnSum"
                    android:layout_width="90dp"
                    android:layout_height="80dp"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/btnthree"
                    android:text="+"
                    android:textAlignment="center"
                    android:textSize="30dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/relativeLayout5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/relativeLayout1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <Button
                    android:id="@+id/btnzero"
                    android:layout_width="90dp"
                    android:layout_height="80dp"

                    android:layout_marginLeft="10dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/btnpoint"
                    android:layout_width="90dp"
                    android:layout_height="80dp"

                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/btnzero"
                    android:text="."
                    android:textAlignment="center"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/btntdelete"
                    android:layout_width="90dp"
                    android:layout_height="80dp"

                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/btnpoint"
                    android:text="âŒ«"
                    android:textAlignment="center"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/btnequal"
                    android:layout_width="90dp"
                    android:layout_height="80dp"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/btntdelete"
                    android:text="="
                    android:textAlignment="center"
                    android:textSize="30dp" />

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
