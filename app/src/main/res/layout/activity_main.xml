<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/screen"
        android:paddingTop="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/txtEntry"
            android:hint="Enter Expression"
            android:textStyle="bold"
            android:textSize="40dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/txtView"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_below="@+id/txtEntry"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/btnLayout"
        android:layout_below="@+id/screen"
        android:layout_marginTop="30dp"
        >

        <Button
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/btnroot"
            android:text="√"
            android:textSize="25dp"
            android:textAlignment="center"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/btnroot"
            android:layout_marginLeft="10dp"
            android:id="@+id/btnpie"
            android:text="π"
            android:textSize="25dp"
            android:textAlignment="center"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/btnpie"
            android:layout_marginLeft="10dp"
            android:id="@+id/btnexp"
            android:text="^"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/btnexp"
            android:layout_marginLeft="10dp"
            android:id="@+id/btnfactorial"
            android:text="!"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_marginRight="10dp"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/btnAC"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/btnroot"
            android:text="AC"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/btnparenthesis"
            android:layout_toRightOf="@+id/btnAC"
            android:layout_below="@id/btnpie"
            android:layout_marginLeft="10dp"
            android:text="( )"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/btnpercentage"
            android:layout_toRightOf="@+id/btnparenthesis"
            android:layout_below="@id/btnexp"
            android:layout_marginLeft="10dp"
            android:text="%"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/btndivide"
            android:layout_toRightOf="@+id/btnpercentage"
            android:layout_below="@id/btnfactorial"
            android:layout_marginLeft="10dp"
            android:text="/"
            android:layout_marginRight="10dp"
            android:textSize="30dp"
            android:textAlignment="center"/>


        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/btnseven"
            android:layout_below="@id/btnAC"
            android:layout_marginLeft="10dp"
            android:text="7"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/eight"
            android:layout_below="@id/btnparenthesis"
            android:layout_toRightOf="@+id/btnseven"
            android:layout_marginLeft="10dp"
            android:text="8"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/nine"
            android:layout_below="@id/btnpercentage"
            android:layout_toRightOf="@+id/eight"
            android:layout_marginLeft="10dp"
            android:text="9"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/btnMultiply"
            android:layout_below="@id/btndivide"
            android:layout_toRightOf="@+id/nine"
            android:layout_marginLeft="10dp"
            android:text="x"
            android:textSize="30dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"/>



        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/btnFour"
            android:layout_below="@id/btnseven"
            android:layout_marginLeft="10dp"
            android:text="4"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/btnfive"
            android:layout_below="@id/eight"
            android:layout_toRightOf="@+id/btnFour"
            android:layout_marginLeft="10dp"
            android:text="5"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/btnsix"
            android:layout_below="@id/nine"
            android:layout_toRightOf="@+id/btnfive"
            android:layout_marginLeft="10dp"
            android:text="6"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/btnSubtract"
            android:layout_below="@id/btnMultiply"
            android:layout_toRightOf="@+id/btnsix"
            android:layout_marginLeft="10dp"
            android:text="-"
            android:textSize="30dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"/>



        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/btnone"
            android:layout_below="@id/btnFour"
            android:layout_marginLeft="10dp"
            android:text="1"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/btntwo"
            android:layout_below="@id/btnfive"
            android:layout_toRightOf="@+id/btnone"
            android:layout_marginLeft="10dp"
            android:text="2"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/btnthree"
            android:layout_below="@id/btnsix"
            android:layout_toRightOf="@+id/btntwo"
            android:layout_marginLeft="10dp"
            android:text="3"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/btnSum"
            android:layout_below="@id/btnSubtract"
            android:layout_toRightOf="@+id/btnthree"
            android:layout_marginLeft="10dp"
            android:text="+"
            android:textSize="30dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"/>



        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/btnzero"
            android:layout_below="@id/btnone"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/btnpoint"
            android:layout_below="@id/btntwo"
            android:layout_toRightOf="@+id/btnzero"
            android:layout_marginLeft="10dp"
            android:text="."
            android:textSize="30dp"
            android:textAlignment="center"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/btntdelete"
            android:layout_below="@id/btnthree"
            android:layout_toRightOf="@+id/btnpoint"
            android:layout_marginLeft="10dp"
            android:text="⌫"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/btnequal"
            android:layout_below="@id/btnSum"
            android:layout_toRightOf="@+id/btntdelete"
            android:layout_marginLeft="10dp"
            android:text="="
            android:textSize="30dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"/>

    </RelativeLayout>
</RelativeLayout>